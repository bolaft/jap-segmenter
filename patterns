# b19:%x[-2,0]/%x[-1,0]/%x[0,0]/%x[1,0]/%x[2,0]
# b20:%x[-1,0]/%x[0,0]/%x[1,0]/%x[2,0]/%x[3,0]
# b21:%x[0,0]/%x[1,0]/%x[2,0]/%x[3,0]/%x[4,0]